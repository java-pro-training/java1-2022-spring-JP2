//pagaidam nesanāk šķirot pēc vārdu skaita tekstā
import java.util.*;

public class wordCounterV2 {

    public static void main(String[] args) {
       wordCounterV2 wordCounterV2 = new wordCounterV2();
        wordCounterV2.run();
    }

   Map<String, Integer> wordCounts = new HashMap<>();

    public void run() {
        Scanner input = new Scanner(System.in);
        while (true) {
            System.out.println("Please enter line of words or type quit:");
            String line = input.nextLine();
            if (line.contains("quit")) break;
            for (String word : line.split(" ")) {
                addWord(word, wordCounts);
            }

            for(String key: sortByKey(wordCounts)){
                System.out.println("["+key+"="+wordCounts.get(key)+"]");
            }
        }

        for (String word : wordCounts.keySet()) {
            System.out.println(word + " = " + wordCounts.get(word));
        }

        input.close();
    }

    public static void addWord(String word, Map<String, Integer> wordMap) {
        Integer value = wordMap.get(word);
        if (value == null) {
            wordMap.put(word.toLowerCase(), 1);
        } else {
            value++;
            wordMap.put(word.toLowerCase(), value);
        }

    }
    List<String> sortByKey(Map<String,Integer> map){
        List<String> listOfKeys = new ArrayList<>(map.keySet());
        Collections.sort(listOfKeys);
        return listOfKeys;
    }

}
